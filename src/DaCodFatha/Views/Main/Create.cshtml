@{
    ViewData["Title"] = "Da Cod Fatha - Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DaCodFatha.Models.Product


<div class="container">
    <h3 class="add-sec">Add a new product to the line</h3>
<hr />

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.Desc)
        @Html.EditorFor(model => model.Desc)
        
        @Html.LabelFor(model => model.Image)
        @Html.EditorFor(model => model.Image)

        <input type="submit" value="List Product" />
    }

</div>